<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<!--
  android:background="@drawable/androidbackground"
    android:backgroundTint="#223F0FAF"
    android:backgroundTintMode="src_over"
    -->
    <TextView
        android:id="@+id/statsTitle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Settings"
        android:textColor="#fff"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/addressText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Wallet Address:"
        android:layout_below="@id/statsTitle"
        android:textColor="#fff"
        android:padding="5dp"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AA000000"
        android:layout_below="@id/addressText"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="YOUR_UPX_ADDRESS_HERE"
        android:layout_margin="5dp"

        android:textColor="#fff" />

    <TextView
        android:id="@+id/thresholdText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Payout threshold (minimum: 75 UPX)"
        android:layout_below="@id/username"
        android:textColor="#fff"
        android:padding="5dp"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/threshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AA000000"
        android:layout_below="@id/thresholdText"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="75.00"
        android:layout_margin="5dp"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/workerText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Miner Name:"
        android:layout_below="@id/threshold"
        android:textColor="#fff"
        android:padding="5dp"
        android:layout_margin="5dp"
        />

    <EditText
        android:id="@+id/workerID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AA000000"
        android:layout_below="@id/workerText"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="MyAndroidDevice"
        android:layout_margin="5dp"

        android:textColor="#fff" />
<!--
    <TextView
        android:id="@+id/minPayTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Payment Threshold"
        android:layout_below="@id/username"
        android:textColor="#fff"
        android:padding="5dp"
        android:layout_margin="5dp"
        /> -->
